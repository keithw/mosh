#!/bin/sh

#
# This test is for the first Unicode issue described on the Mosh web
# page, a combining character drawn on a cell after returning the
# cursor to that cell.
#

fail()
{
    printf "$@" 2>&1
    exit 99
}



PATH=$PATH:.:$srcdir
# Top-level wrapper.
if [ $# -eq 0 ]; then
    render-test $0 baseline post
    exit
fi

# OK, we have arguments, we're one of the test hooks.
if [ $# -ne 1 ]; then
    fail "bad arguments %s\n" "$@"
fi

baseline()
{
    printf 'abc\n\314\202\ndef'
    sleep .5
}

variant()
{
    printf 'abc\n \314\202\ndef'
    sleep .5
}

post()
{
    grep -q "$(printf '^\302\240\314\202$')" baseline.capture
    exit
}

case $1 in
    baseline)
	baseline;;
    variant)
	variant;;
    post)
	post;;
    *)
	fail "unknown test argument %s\n" $1;;
esac
