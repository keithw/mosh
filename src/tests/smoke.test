#!/bin/sh
: ${srcdir:=$PWD}
echo starting
sleep 1
if [ ! -t 0 ]; then
    if ! type tmux; then
	printf "tmux not found\n" >&2
	exit 77
    fi
    ${srcdir}/hold-stdin tmux -C new-session $0 | grep xyzzy
else
    ../../scripts/mosh --local --client=../frontend/mosh-client --server="$PWD/../frontend/mosh-server" --bind-server=127.0.0.1 127.0.0.1 printf xy%s zzy | grep xyzzy
fi
sleep 1
rc=$?
echo ending
exit $rc
